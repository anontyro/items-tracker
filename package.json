{
  "name": "site-items-tracker",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev:scraper": "pnpm --filter board-game-price-tracker-scraper dev",
    "build:scraper": "pnpm --filter board-game-price-tracker-scraper build",
    "start:scraper": "pnpm --filter board-game-price-tracker-scraper start",
    "dev:backend": "pnpm --filter board-game-price-tracker-backend start:dev",
    "dev:frontend": "pnpm --filter board-game-price-tracker-frontend dev",
    "build:backend": "pnpm --filter board-game-price-tracker-backend build",
    "start:backend": "pnpm --filter board-game-price-tracker-backend start"
  },
  "workspaces": [
    "scraper",
    "frontend",
    "backend",
    "packages/*"
  ]
}
